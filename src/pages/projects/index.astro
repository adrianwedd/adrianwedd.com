---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { slug } from '../../lib/utils';

const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return b.data.date.getTime() - a.data.date.getTime();
});

const allTags = [...new Set(projects.flatMap(p => p.data.tags))].sort();

const statusLabels: Record<string, string> = {
  active: 'Active',
  complete: 'Complete',
  archived: 'Archived',
  experiment: 'Experiment',
};
---

<BaseLayout
  title="Projects"
  description="Things I've built, broken, and sometimes both."
>
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <h1 class="text-text">Projects</h1>
    <p class="mt-4 text-text-muted max-w-prose">
      Things I've built, broken, and sometimes both.
    </p>

    {allTags.length > 0 && (
      <nav class="mt-8 flex flex-wrap gap-2" aria-label="Filter by tag" id="tag-filters">
        <button
          type="button"
          data-tag=""
          class="tag-filter text-xs px-3 py-1 rounded-full border border-accent bg-accent/10 text-accent font-medium cursor-pointer transition-colors"
        >
          All
        </button>
        {allTags.map(tag => (
          <button
            type="button"
            data-tag={tag}
            class="tag-filter text-xs px-3 py-1 rounded-full border border-border text-text-muted cursor-pointer hover:border-accent hover:text-accent transition-colors"
          >
            {tag}
          </button>
        ))}
      </nav>
    )}

    <div class="mt-10 grid gap-6 sm:grid-cols-2" id="project-grid">
      {projects.map(project => (
        <a
          href={`/projects/${slug(project.id)}/`}
          data-tags={JSON.stringify(project.data.tags)}
          class="project-card group block p-6 rounded-xl bg-surface-alt border border-border shadow-subtle hover:shadow-card card-hover hover:border-accent/50 transition-all no-underline"
        >
          <div class="flex items-start justify-between gap-3">
            <h2 class="text-lg font-semibold text-text group-hover:text-accent transition-colors">
              {project.data.title}
            </h2>
            <span class:list={[
              'text-xs px-2 py-0.5 rounded-full border whitespace-nowrap',
              project.data.featured
                ? 'border-accent/30 text-accent'
                : 'border-border text-text-muted',
            ]}>
              {statusLabels[project.data.status] || project.data.status}
            </span>
          </div>
          <p class="mt-2 text-sm text-text-muted leading-relaxed">
            {project.data.description}
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            {project.data.tags.slice(0, 4).map((tag: string) => (
              <span class="text-xs px-2 py-0.5 rounded-full bg-surface border border-border text-text-muted">
                {tag}
              </span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>

  <script>
    const filters = document.getElementById('tag-filters');
    const cards = document.querySelectorAll<HTMLElement>('.project-card');

    filters?.addEventListener('click', (e) => {
      const btn = (e.target as HTMLElement).closest<HTMLButtonElement>('.tag-filter');
      if (!btn) return;

      const tag = btn.dataset.tag || '';

      // Update active button styles
      filters.querySelectorAll('.tag-filter').forEach(b => {
        b.classList.remove('border-accent', 'bg-accent/10', 'text-accent', 'font-medium');
        b.classList.add('border-border', 'text-text-muted');
      });
      btn.classList.remove('border-border', 'text-text-muted');
      btn.classList.add('border-accent', 'bg-accent/10', 'text-accent', 'font-medium');

      // Filter cards
      cards.forEach(card => {
        if (!tag) {
          card.style.display = '';
          return;
        }
        const tags: string[] = JSON.parse(card.dataset.tags || '[]');
        card.style.display = tags.includes(tag) ? '' : 'none';
      });
    });
  </script>
</BaseLayout>
