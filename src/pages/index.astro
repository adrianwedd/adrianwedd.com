---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { slug } from '../lib/utils';

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter(p => p.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .filter(p => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Adrian Wedd"
  description="Creative technologist. Building things that think, break, and sometimes both."
>
  {/* Hero */}
  <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <h1 class="text-text">Adrian Wedd</h1>
    <p class="mt-4 text-xl sm:text-2xl text-text-muted max-w-prose leading-relaxed">
      Creative technologist. I build things that think, break, and sometimes both.
    </p>
    <p class="mt-6 text-base text-text-muted max-w-prose leading-relaxed">
      This is my workshop â€” where finished work, ongoing experiments, and raw thinking coexist. The door is open.
    </p>
  </section>

  {/* Featured projects */}
  {featuredProjects.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
      <div class="flex items-baseline justify-between mb-8">
        <h2 class="text-text">Featured Work</h2>
        <a href="/projects/" class="text-sm text-text-muted hover:text-accent transition-colors">
          All projects &rarr;
        </a>
      </div>
      <div class="grid gap-6 sm:grid-cols-2">
        {featuredProjects.map((project) => (
          <a
            href={project.data.url || `/projects/${slug(project.id)}/`}
            class="group block p-6 rounded-xl bg-surface-alt border border-border hover:border-accent/50 transition-all no-underline"
          >
            <h3 class="text-lg font-semibold text-text group-hover:text-accent transition-colors">
              {project.data.title}
            </h3>
            <p class="mt-2 text-sm text-text-muted leading-relaxed">
              {project.data.description}
            </p>
            <div class="mt-4 flex flex-wrap gap-2">
              {project.data.tags.slice(0, 3).map((tag: string) => (
                <span class="text-xs px-2 py-0.5 rounded-full bg-surface border border-border text-text-muted">
                  {tag}
                </span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </section>
  )}

  {/* Recent posts */}
  {recentPosts.length > 0 && (
    <section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pb-16">
      <div class="flex items-baseline justify-between mb-8">
        <h2 class="text-text">Recent Writing</h2>
        <a href="/blog/" class="text-sm text-text-muted hover:text-accent transition-colors">
          All posts &rarr;
        </a>
      </div>
      <div class="space-y-6">
        {recentPosts.map((post) => (
          <a
            href={`/blog/${slug(post.id)}/`}
            class="group block p-6 rounded-xl bg-surface-alt border border-border hover:border-accent/50 transition-all no-underline"
          >
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="text-lg font-semibold text-text group-hover:text-accent transition-colors">
                  {post.data.title}
                </h3>
                <p class="mt-1 text-sm text-text-muted leading-relaxed">
                  {post.data.description}
                </p>
              </div>
              <time class="text-xs text-text-muted whitespace-nowrap" datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-AU', { day: 'numeric', month: 'short', year: 'numeric' })}
              </time>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}
</BaseLayout>
