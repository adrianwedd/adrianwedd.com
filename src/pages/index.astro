---
import BaseLayout from '../layouts/BaseLayout.astro';
import Personalisation from '../components/islands/Personalisation.tsx';
import { getCollection } from 'astro:content';
import { slug } from '../lib/utils';

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((p) => p.data.featured)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const allGalleries = await getCollection('gallery');
const recentGalleries = allGalleries
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);

const allEpisodes = await getCollection('audio');
const recentEpisodes = allEpisodes
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 3);
---

<BaseLayout
  title="Adrian Wedd"
  description="AI safety researcher and systems thinker. Building things that think, break, and sometimes both."
>
  {/* Hero */}
  <section class="hero-glow mx-auto max-w-6xl px-4 py-16 sm:px-6 sm:py-24 lg:px-8">
    <Personalisation client:load />
    <h1 class="animate-in text-text">Adrian Wedd</h1>
    <p
      class="animate-in mt-4 max-w-prose text-xl leading-relaxed text-text-muted sm:text-2xl"
      style="animation-delay: 0.1s"
    >
      I build things that think, break, and sometimes both.
    </p>
    <p class="animate-in mt-6 max-w-prose text-base leading-relaxed text-text-muted" style="animation-delay: 0.2s">
      AI safety researcher and systems thinker. This is my workshop â€” where finished work, ongoing experiments, and raw
      thinking coexist.
    </p>
    <div class="animate-in mt-8 flex flex-wrap gap-4" style="animation-delay: 0.3s">
      <a
        href="/projects/"
        class="inline-flex items-center gap-2 rounded-lg bg-accent px-5 py-2.5 text-sm font-medium text-surface no-underline transition-colors hover:bg-accent/90"
      >
        View Projects
        <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="/blog/"
        class="inline-flex items-center gap-2 rounded-lg border border-border px-5 py-2.5 text-sm font-medium text-text-muted no-underline transition-colors hover:border-accent hover:text-accent"
      >
        Read Blog
      </a>
    </div>
  </section>

  <div class="section-divider mx-auto max-w-6xl"></div>

  {/* Featured projects */}
  {
    featuredProjects.length > 0 && (
      <section class="mx-auto max-w-6xl px-4 pb-16 sm:px-6 lg:px-8">
        <div class="mb-8 flex items-baseline justify-between">
          <h2 class="text-text">Featured Work</h2>
          <a href="/projects/" class="text-sm text-text-muted transition-colors hover:text-accent">
            All projects &rarr;
          </a>
        </div>
        <div class="grid gap-6 sm:grid-cols-2">
          {featuredProjects.map((project) => (
            <a
              href={`/projects/${slug(project.id)}/`}
              class="card-hover hover:border-accent/50 group block overflow-hidden rounded-xl border border-border bg-surface-alt no-underline shadow-subtle transition-all hover:shadow-card"
            >
              {project.data.heroImage && (
                <img src={project.data.heroImage} alt={`${project.data.title} hero image`} class="h-40 w-full object-cover" loading="lazy" />
              )}
              <div class="p-6">
                <h3 class="text-lg font-semibold text-text transition-colors group-hover:text-accent">
                  {project.data.title}
                </h3>
                <p class="mt-2 text-sm leading-relaxed text-text-muted">{project.data.description}</p>
                <div class="mt-4 flex flex-wrap gap-2">
                  {project.data.tags.slice(0, 3).map((tag: string) => (
                    <span class="rounded-full border border-border bg-surface px-2 py-0.5 text-xs text-text-muted">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </a>
          ))}
        </div>
        <div class="mt-8 text-center">
          <a href="/projects/" class="text-sm text-text-muted transition-colors hover:text-accent">
            All projects &rarr;
          </a>
        </div>
      </section>
    )
  }

  <div class="section-divider mx-auto max-w-6xl"></div>

  {/* Recent posts */}
  {
    recentPosts.length > 0 && (
      <section class="mx-auto max-w-6xl px-4 pb-16 sm:px-6 lg:px-8">
        <div class="mb-8 flex items-baseline justify-between">
          <h2 class="text-text">Recent Writing</h2>
          <a href="/blog/" class="text-sm text-text-muted transition-colors hover:text-accent">
            All posts &rarr;
          </a>
        </div>
        <div class="space-y-6">
          {recentPosts.map((post) => (
            <a
              href={`/blog/${slug(post.id)}/`}
              class="card-hover hover:border-accent/50 group block rounded-xl border border-border bg-surface-alt p-6 no-underline shadow-subtle transition-all hover:shadow-card"
            >
              <div class="flex items-start justify-between gap-4">
                <div>
                  <h3 class="text-lg font-semibold text-text transition-colors group-hover:text-accent">
                    {post.data.title}
                  </h3>
                  <p class="mt-1 text-sm leading-relaxed text-text-muted">{post.data.description}</p>
                </div>
                <time class="whitespace-nowrap text-xs text-text-muted" datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('en-AU', { day: 'numeric', month: 'short', year: 'numeric' })}
                </time>
              </div>
            </a>
          ))}
        </div>
      </section>
    )
  }

  {/* Gallery preview */}
  {
    recentGalleries.length > 0 && (
      <>
        <div class="section-divider mx-auto max-w-6xl" />
        <section class="mx-auto max-w-6xl px-4 pb-16 sm:px-6 lg:px-8">
          <div class="mb-8 flex items-baseline justify-between">
            <h2 class="text-text">Gallery</h2>
            <a href="/gallery/" class="text-sm text-text-muted transition-colors hover:text-accent">
              All collections &rarr;
            </a>
          </div>
          <div class="grid gap-6 sm:grid-cols-3">
            {recentGalleries.map((collection) => (
              <a
                href={`/gallery/${slug(collection.id)}/`}
                class="card-hover hover:border-accent/50 group block overflow-hidden rounded-xl border border-border no-underline shadow-subtle transition-all hover:shadow-card"
              >
                {collection.data.coverImage && (
                  <div class="aspect-[4/3] overflow-hidden bg-surface-alt">
                    <img
                      src={collection.data.coverImage}
                      alt={collection.data.title}
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-4">
                  <h3 class="text-sm font-semibold text-text transition-colors group-hover:text-accent">
                    {collection.data.title}
                  </h3>
                  <p class="mt-1 text-xs text-text-muted">
                    {collection.data.images.length} image{collection.data.images.length !== 1 ? 's' : ''}
                  </p>
                </div>
              </a>
            ))}
          </div>
        </section>
      </>
    )
  }

  {/* Audio preview */}
  {
    recentEpisodes.length > 0 && (
      <>
        <div class="section-divider mx-auto max-w-6xl" />
        <section class="mx-auto max-w-6xl px-4 pb-16 sm:px-6 lg:px-8">
          <div class="mb-8 flex items-baseline justify-between">
            <h2 class="text-text">Audio</h2>
            <a href="/audio/" class="text-sm text-text-muted transition-colors hover:text-accent">
              All episodes &rarr;
            </a>
          </div>
          <div class="space-y-4">
            {recentEpisodes.map((episode) => (
              <a
                href={`/audio/${slug(episode.id)}/`}
                class="card-hover hover:border-accent/50 group block rounded-xl border border-border bg-surface-alt p-5 no-underline shadow-subtle transition-all hover:shadow-card"
              >
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <h3 class="text-base font-semibold text-text transition-colors group-hover:text-accent">
                      {episode.data.title}
                    </h3>
                    <p class="mt-1 text-sm leading-relaxed text-text-muted line-clamp-2">{episode.data.description}</p>
                  </div>
                  <div class="flex flex-col items-end gap-1 shrink-0">
                    <time class="whitespace-nowrap text-xs text-text-muted" datetime={episode.data.date.toISOString()}>
                      {episode.data.date.toLocaleDateString('en-AU', { day: 'numeric', month: 'short', year: 'numeric' })}
                    </time>
                    {episode.data.duration && (
                      <span class="text-xs text-text-muted">{episode.data.duration}</span>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        </section>
      </>
    )
  }
</BaseLayout>
