---
import BaseLayout from '../layouts/BaseLayout.astro';
import AnalyticsDashboard from '../components/islands/AnalyticsDashboard';

const title = 'Analytics';
const description = 'Real-time analytics dashboard showing traffic, engagement, and content performance metrics.';
---

<BaseLayout {title} {description} noindex>
  <div class="mx-auto max-w-6xl px-4 py-12">
    <header class="mb-8">
      <h1 class="mb-4 text-4xl font-bold">{title}</h1>
      <p class="text-lg text-text-muted">{description}</p>
    </header>

    <AnalyticsDashboard client:load />
  </div>
</BaseLayout>
