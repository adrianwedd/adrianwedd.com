---
import BaseLayout from '../layouts/BaseLayout.astro';
import AnalyticsDashboard from '../components/islands/AnalyticsDashboard';

const title = 'Analytics';
const description = 'Real-time analytics dashboard showing traffic, engagement, and content performance metrics.';
---

<BaseLayout {title} {description}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-text-muted text-lg">{description}</p>
    </header>

    <AnalyticsDashboard client:load />
  </div>
</BaseLayout>
