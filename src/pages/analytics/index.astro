---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AnalyticsDashboard from '../../components/islands/AnalyticsDashboard';

const seo = {
  title: 'Analytics',
  description: 'Public traffic data—what gets read, where readers come from. Aggregate only. Transparency by default.',
  noindex: false,
};
---

<BaseLayout seo={seo}>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">Analytics</h1>
      <p class="text-text-muted text-lg">
        Traffic data made public. Aggregate only—no individual tracking, no session reconstruction.
        Updates daily at build time. Transparency by default.
      </p>
    </header>

    <AnalyticsDashboard client:load />
  </div>
</BaseLayout>
