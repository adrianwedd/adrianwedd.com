---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AnalyticsDashboard from '../../components/islands/AnalyticsDashboard';

const seo = {
  title: 'Analytics',
  description: 'Public traffic data—what gets read, where readers come from. Aggregate only. Transparency by default.',
  noindex: false,
};
---

<BaseLayout seo={seo}>
  <div class="mx-auto max-w-6xl px-4 py-12">
    <header class="mb-8">
      <h1 class="mb-4 text-4xl font-bold">Analytics</h1>
      <p class="text-lg text-text-muted">
        Traffic data made public. Aggregate only—no individual tracking, no session reconstruction. Updates daily at
        build time. Transparency by default.
      </p>
    </header>

    <AnalyticsDashboard client:load />
  </div>
</BaseLayout>
