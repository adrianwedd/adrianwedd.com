---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page not found" description="The page you're looking for doesn't exist.">
  <section class="mx-auto max-w-3xl px-4 py-24 text-center sm:px-6 lg:px-8">
    <p class="text-6xl font-bold text-accent">404</p>
    <h1 class="mt-4 text-text">Page not found</h1>
    <p class="mx-auto mt-4 max-w-md text-text-muted">The page you're looking for doesn't exist or has been moved.</p>
    <div class="mt-8 flex justify-center gap-4">
      <a
        href="/"
        class="inline-flex items-center gap-2 rounded-lg bg-accent px-5 py-2.5 text-sm font-medium text-surface no-underline shadow-subtle transition-colors hover:bg-accent-hover hover:shadow-card"
      >
        Go home
      </a>
      <a
        href="/projects/"
        class="inline-flex items-center gap-2 rounded-lg border border-border px-5 py-2.5 text-sm font-medium text-text-muted no-underline transition-colors hover:border-accent hover:text-accent"
      >
        Browse projects
      </a>
    </div>

    <div class="mx-auto mt-12 max-w-md text-left">
      <p class="mb-4 text-sm text-text-muted">Or search for what you were looking for:</p>
      <div id="search-404"></div>
    </div>
  </section>
</BaseLayout>

<link href="/pagefind/pagefind-ui.css" rel="stylesheet" />
<script is:inline>
  window.addEventListener('DOMContentLoaded', async () => {
    var script = document.createElement('script');
    script.src = '/pagefind/pagefind-ui.js';
    script.onload = function () {
      new PagefindUI({
        element: '#search-404',
        showSubResults: false,
        showImages: false,
        autofocus: false,
      });
    };
    document.head.appendChild(script);
  });
</script>
