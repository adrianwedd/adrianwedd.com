---
import AudioPlayer from './islands/AudioPlayer.tsx';
import MindMap from './islands/MindMap.tsx';
import Quiz from './islands/Quiz.tsx';
import Flashcards from './islands/Flashcards.tsx';
import DataTable from './islands/DataTable.tsx';

interface Props {
  audioUrl?: string;
  videoUrl?: string;
  infographic?: string;
  mindmap?: string;
  quiz?: string;
  flashcards?: string;
  dataTable?: string;
  slides?: string;
  title?: string;
}

const {
  audioUrl,
  videoUrl,
  infographic,
  mindmap,
  quiz,
  flashcards,
  dataTable,
  slides,
  title = 'Notebook asset',
} = Astro.props;

const hasAssets = audioUrl || videoUrl || infographic || mindmap || quiz || flashcards || dataTable || slides;
---

{
  hasAssets && (
    <section class="mt-12 space-y-8 border-t border-border pt-8" aria-label="Notebook assets">
      <h2 class="text-lg font-semibold text-text">Explore</h2>

      {audioUrl && (
        <div>
          <div class="mb-3 flex items-center justify-between">
            <h3 class="text-sm font-medium text-text-muted">Audio overview</h3>
            <a href="/audio/" class="text-xs text-text-muted transition-colors hover:text-accent">
              Browse all audio &rarr;
            </a>
          </div>
          <AudioPlayer src={audioUrl} title={title} client:idle />
          <p class="mt-2 text-xs text-text-muted">
            Also available as a standalone episode in the{' '}
            <a href="/audio/" class="text-accent hover:underline">
              audio collection
            </a>
            .
          </p>
        </div>
      )}

      {videoUrl && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Video summary</h3>
          <video
            controls
            preload="metadata"
            class="w-full rounded-lg border border-border bg-surface-alt"
            aria-label={`Video overview of ${title}`}
          >
            <source src={videoUrl} type="video/mp4" />
          </video>
        </div>
      )}

      {infographic && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Infographic</h3>
          <a href={infographic} target="_blank" rel="noopener" class="block">
            <img
              src={infographic}
              alt={`Infographic for ${title}`}
              width="768"
              height="1376"
              class="hover:border-accent/50 w-full cursor-zoom-in rounded-lg border border-border transition-colors"
              loading="lazy"
              decoding="async"
            />
          </a>
        </div>
      )}

      {mindmap && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Mind map</h3>
          <MindMap src={mindmap} client:idle />
        </div>
      )}

      {quiz && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Quiz</h3>
          <Quiz src={quiz} client:idle />
        </div>
      )}

      {flashcards && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Flashcards</h3>
          <Flashcards src={flashcards} client:idle />
        </div>
      )}

      {dataTable && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Data</h3>
          <DataTable src={dataTable} client:idle />
        </div>
      )}

      {slides && (
        <div>
          <h3 class="mb-3 text-sm font-medium text-text-muted">Slides</h3>
          <a
            href={slides}
            download
            class="hover:border-accent/50 inline-flex items-center gap-2 rounded-lg border border-border px-4 py-2 text-sm text-text-muted no-underline transition-colors hover:text-accent"
          >
            <svg class="h-4 w-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            Download slide deck (PDF)
          </a>
        </div>
      )}
    </section>
  )
}
