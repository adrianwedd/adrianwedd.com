---
interface Props {
  images: Array<{ src: string; alt: string; caption?: string }>;
}

const { images } = Astro.props;
---

<div
  id="lightbox"
  class="bg-surface/95 fixed inset-0 z-[200] hidden backdrop-blur-sm"
  role="dialog"
  aria-modal="true"
  aria-label="Image viewer"
>
  <div class="flex h-full items-center justify-center p-4 sm:p-8">
    <button
      id="lightbox-close"
      type="button"
      class="absolute right-4 top-4 z-10 rounded-lg p-2 text-text-muted transition-colors hover:bg-surface-alt hover:text-text"
      aria-label="Close lightbox"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <button
      id="lightbox-prev"
      type="button"
      class="absolute left-4 top-1/2 z-10 -translate-y-1/2 rounded-lg p-2 text-text-muted transition-colors hover:bg-surface-alt hover:text-text"
      aria-label="Previous image"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
      </svg>
    </button>

    <button
      id="lightbox-next"
      type="button"
      class="absolute right-4 top-1/2 z-10 -translate-y-1/2 rounded-lg p-2 text-text-muted transition-colors hover:bg-surface-alt hover:text-text"
      aria-label="Next image"
    >
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>

    <figure class="flex max-h-full max-w-full flex-col items-center">
      <img id="lightbox-img" src="" alt="" class="max-h-[80vh] max-w-full rounded-lg object-contain" />
      <figcaption id="lightbox-caption" class="mt-3 text-center text-sm text-text-muted"></figcaption>
    </figure>
  </div>
</div>

<script define:vars={{ images }}>
  const lightbox = document.getElementById('lightbox');
  const img = document.getElementById('lightbox-img');
  const caption = document.getElementById('lightbox-caption');
  const closeBtn = document.getElementById('lightbox-close');
  const prevBtn = document.getElementById('lightbox-prev');
  const nextBtn = document.getElementById('lightbox-next');
  let currentIndex = 0;
  let triggerElement = null;

  function show(index, trigger) {
    currentIndex = index;
    triggerElement = trigger || document.activeElement;
    const image = images[index];
    img.src = image.src;
    img.alt = image.alt;
    caption.textContent = image.caption || '';
    lightbox.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    closeBtn.focus();
  }

  function hide() {
    lightbox.classList.add('hidden');
    document.body.style.overflow = '';
    if (triggerElement && triggerElement.focus) {
      triggerElement.focus();
    }
    triggerElement = null;
  }

  function prev() {
    show((currentIndex - 1 + images.length) % images.length);
  }

  function next() {
    show((currentIndex + 1) % images.length);
  }

  document.querySelectorAll('.gallery-trigger').forEach((btn) => {
    btn.addEventListener('click', () => show(parseInt(btn.dataset.index), btn));
  });

  closeBtn.addEventListener('click', hide);
  prevBtn.addEventListener('click', prev);
  nextBtn.addEventListener('click', next);

  lightbox.addEventListener('click', (e) => {
    if (e.target === lightbox || e.target.parentElement === lightbox) hide();
  });

  document.addEventListener('keydown', (e) => {
    if (lightbox.classList.contains('hidden')) return;
    if (e.key === 'Escape') { hide(); return; }
    if (e.key === 'ArrowLeft') { prev(); return; }
    if (e.key === 'ArrowRight') { next(); return; }

    // Focus trap: keep Tab within lightbox
    if (e.key === 'Tab') {
      const focusable = [closeBtn, prevBtn, nextBtn];
      const first = focusable[0];
      const last = focusable[focusable.length - 1];
      if (e.shiftKey && document.activeElement === first) {
        e.preventDefault();
        last.focus();
      } else if (!e.shiftKey && document.activeElement === last) {
        e.preventDefault();
        first.focus();
      }
    }
  });
</script>
