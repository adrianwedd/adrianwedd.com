---
interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
  publishedDate?: string;
  tags?: string[];
  noindex?: boolean;
}

const { title, description, image = '/og-default.svg', type = 'website', publishedDate, tags, noindex } = Astro.props;

const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : `${Astro.url.pathname}/`;
const canonicalUrl = new URL(pathname, Astro.site);
const ogImageUrl = new URL(image, Astro.site);
const fullTitle = title === 'Adrian Wedd' ? title : `${title} — Adrian Wedd`;
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta name="color-scheme" content="dark light" />
<meta name="author" content="Adrian Wedd" />
<meta name="theme-color" content="#c48b6e" />
{tags && <meta name="keywords" content={tags.join(', ')} />}
{noindex && <meta name="robots" content="noindex, nofollow" />}

<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={canonicalUrl} />

<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="icon" href="/favicon.ico" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
<link rel="manifest" href="/site.webmanifest" />

<!-- RSS auto-discovery -->
<link rel="alternate" type="application/rss+xml" title="Adrian Wedd — All Content" href="/rss.xml" />
<link rel="alternate" type="application/rss+xml" title="Adrian Wedd — Blog" href="/blog/rss.xml" />

<!-- Preconnect for external origins -->
<link rel="dns-prefetch" href="https://www.googletagmanager.com" />
<link rel="dns-prefetch" href="https://api.github.com" />
<link rel="dns-prefetch" href="https://tile.openstreetmap.org" />

<!-- Open Graph -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:site_name" content="Adrian Wedd" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />

{publishedDate && <meta property="article:published_time" content={publishedDate} />}
{tags && tags.map((tag) => <meta property="article:tag" content={tag} />)}

<!-- JSON-LD -->
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    '@context': 'https://schema.org',
    '@type': type === 'article' ? 'Article' : 'WebSite',
    name: fullTitle,
    description,
    url: canonicalUrl.href,
    image: ogImageUrl.href,
    mainEntityOfPage: { '@type': 'WebPage', '@id': canonicalUrl.href },
    ...(type === 'article' && publishedDate ? { datePublished: publishedDate } : {}),
    ...(tags ? { keywords: tags.join(', ') } : {}),
    author: {
      '@type': 'Person',
      name: 'Adrian Wedd',
      url: 'https://adrianwedd.com',
      sameAs: [
        'https://github.com/adrianwedd',
        'https://www.linkedin.com/in/adrianwedd/',
      ],
    },
    publisher: {
      '@type': 'Organization',
      name: 'Adrian Wedd',
      url: 'https://adrianwedd.com',
      logo: {
        '@type': 'ImageObject',
        url: 'https://adrianwedd.com/favicon.svg',
      },
    },
  })}
/>
